<Window x:Class="SmartWMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartWMS"
        xmlns:vm="clr-namespace:SmartWMS.ViewModels"
        xmlns:views="clr-namespace:SmartWMS.Views"
        mc:Ignorable="d"
        Title="Smart WMS - Warehouse Management System"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MaterialsViewModel}">
            <views:MaterialsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="24,24,24,32">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource PrimaryBrush}">
                            <TextBlock Text="&#xE8B1;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Smart WMS" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Semiconductor Mgmt" FontSize="11" Foreground="#94a3b8"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="16,0">
                    <RadioButton x:Name="NavDashboard" Style="{StaticResource NavButton}"
                                 IsChecked="True" GroupName="Navigation"
                                 Command="{Binding NavigateCommand}" CommandParameter="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       VerticalAlignment="Center" Width="28"/>
                            <TextBlock Text="Dashboard" FontSize="14" FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButton}" Margin="0,4,0,0"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateCommand}" CommandParameter="Inventory">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       VerticalAlignment="Center" Width="28"/>
                            <TextBlock Text="Inventory" FontSize="14" FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource NavButton}" Margin="0,4,0,0"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateCommand}" CommandParameter="Reports">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       VerticalAlignment="Center" Width="28"/>
                            <TextBlock Text="Reports" FontSize="14" FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel Grid.Row="2" Margin="16,0,16,16">
                    <RadioButton Style="{StaticResource NavButton}"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateCommand}" CommandParameter="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       VerticalAlignment="Center" Width="28"/>
                            <TextBlock Text="Settings" FontSize="14" FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <Border Margin="0,16,0,0" Padding="12" CornerRadius="8"
                            Background="#2a3b4c" BorderBrush="#3a4b5c" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="18" Background="#475569">
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                           Foreground="#94a3b8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Admin User" FontSize="13" FontWeight="Medium" Foreground="White"/>
                                <TextBlock Text="admin@smartwms.com" FontSize="11" Foreground="#64748b"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
