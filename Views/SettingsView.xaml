<UserControl x:Class="SmartWMS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartWMS.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="32,24">
            <StackPanel>
                <TextBlock Text="Settings"
                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Configure environment thresholds and system preferences."
                           FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32">
            <StackPanel MaxWidth="800">
                <!-- Environment Settings -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,24"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Width="40" Height="40" CornerRadius="8" Background="#fef3c7">
                                <TextBlock Text="&#xE9CA;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="{StaticResource WarningBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="16,0,0,0">
                                <TextBlock Text="Environment Interlock Settings" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Configure temperature, humidity, and light control thresholds"
                                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Temperature -->
                        <Border BorderBrush="#f0f2f4" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Temperature Control" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Target temperature and tolerance range"
                                               FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel Margin="0,0,16,0">
                                        <TextBlock Text="Target (°C)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding TargetTemperature, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80" Padding="10,8" FontSize="14" TextAlignment="Center"
                                                 Background="#f0f2f4" BorderThickness="0"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="± Tolerance" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding TemperatureTolerance, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80" Padding="10,8" FontSize="14" TextAlignment="Center"
                                                 Background="#f0f2f4" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0"
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="Valid range: "/>
                                    <Run Text="{Binding TargetTemperature, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                    <Run Text="°C ± "/>
                                    <Run Text="{Binding TemperatureTolerance, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                    <Run Text="°C"/>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Humidity -->
                        <Border BorderBrush="#f0f2f4" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Humidity Control" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Target humidity and tolerance range"
                                               FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel Margin="0,0,16,0">
                                        <TextBlock Text="Target (%)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding TargetHumidity, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80" Padding="10,8" FontSize="14" TextAlignment="Center"
                                                 Background="#f0f2f4" BorderThickness="0"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="± Tolerance" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding HumidityTolerance, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="80" Padding="10,8" FontSize="14" TextAlignment="Center"
                                                 Background="#f0f2f4" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0"
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="Valid range: "/>
                                    <Run Text="{Binding TargetHumidity, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                    <Run Text="% ± "/>
                                    <Run Text="{Binding HumidityTolerance, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                    <Run Text="%"/>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Light Control -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Light Control" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Block light during outbound operations (for photoresist protection)"
                                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                            </StackPanel>

                            <CheckBox Grid.Column="1" IsChecked="{Binding AllowLight}" VerticalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Server Settings -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,24"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Width="40" Height="40" CornerRadius="8" Background="#eff6ff">
                                <TextBlock Text="&#xE968;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="16,0,0,0">
                                <TextBlock Text="Server Connection" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Configure API server connection settings"
                                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="API Server URL" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12,10" FontSize="14"
                                         Background="#f0f2f4" BorderThickness="0"/>
                            </StackPanel>

                            <Button Grid.Column="1" Style="{StaticResource SecondaryButton}" Margin="12,18,0,0"
                                    Padding="16,10" VerticalAlignment="Bottom">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Test Connection" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButton}" Command="{Binding ResetCommand}"
                            Margin="0,0,12,0" Padding="20,12">
                        <TextBlock Text="Reset to Defaults"/>
                    </Button>
                    <Button Style="{StaticResource PrimaryButton}" Command="{Binding SaveCommand}"
                            Padding="20,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Save Changes" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
