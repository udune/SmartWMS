<UserControl x:Class="SmartWMS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartWMS.Views"
             xmlns:models="clr-namespace:SmartWMS.Models"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Real-time Cell &amp; Environment Monitor"
                               FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Connected" FontSize="13" Foreground="{StaticResource SuccessBrush}" FontWeight="Medium"/>
                        <TextBlock Text="  •  " Foreground="#cbd5e1"/>
                        <TextBlock Text="High Precision Storage" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- View Toggle -->
                    <Border Background="#f0f2f4" CornerRadius="8" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Grid View" IsChecked="{Binding IsGridView}" GroupName="ViewMode"
                                         Padding="12,8" FontSize="12" FontWeight="SemiBold"
                                         Command="{Binding SwitchToGridViewCommand}">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="Transparent"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontWeight="{TemplateBinding FontWeight}"
                                                       FontSize="{TemplateBinding FontSize}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton Content="List View" IsChecked="{Binding IsListView, Mode=OneWay}" GroupName="ViewMode"
                                         Padding="12,8" FontSize="12" FontWeight="Medium"
                                         Command="{Binding SwitchToListViewCommand}">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="Transparent"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontWeight="{TemplateBinding FontWeight}"
                                                       FontSize="{TemplateBinding FontSize}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <Button Margin="16,0,0,0" Style="{StaticResource SecondaryButton}" Padding="10"
                            Command="{Binding RefreshCommand}">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Border Background="White" CornerRadius="8" Padding="12,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200" BorderThickness="0" Background="Transparent"
                                     VerticalAlignment="Center" Margin="8,0,0,0" Padding="0,8"
                                     FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <ComboBox ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}"
                              Margin="12,0,0,0" Padding="12,10" Width="180" FontSize="14"
                              Background="White" BorderBrush="{StaticResource BorderBrush}"/>
                </StackPanel>

                <!-- Legend -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="16,8"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="Normal" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource DangerBrush}"/>
                            <TextBlock Text="Alert" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource InfoBrush}"/>
                            <TextBlock Text="Robot Active" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Grid View -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="32,0,32,32"
                      Visibility="{Binding IsGridView, Converter={StaticResource BoolToVis}}">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8" Background="White" CornerRadius="12"
                                BorderThickness="4,1,1,1" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                            <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Empty">
                                            <Setter Property="BorderBrush" Value="#cbd5e1"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0" Margin="20,20,20,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="44" Height="44" CornerRadius="8" Padding="8">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#ecfdf5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                            <Setter Property="Background" Value="#fef2f2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                            <Setter Property="Background" Value="#eff6ff"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                            <Setter Property="Background" Value="#f1f5f9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding CellCode}" FontWeight="Bold" FontSize="14"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#059669"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Foreground" Value="#dc2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                                <Setter Property="Foreground" Value="#2563eb"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                                <Setter Property="Foreground" Value="#64748b"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Storage Cell" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding Zone}"/>
                                                <Run Text=" • "/>
                                                <Run Text="{Binding Rack}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="1" CornerRadius="4" Padding="8,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#ecfdf5"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                        <Setter Property="Background" Value="#fef2f2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                        <Setter Property="Background" Value="#2563eb"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                        <Setter Property="Background" Value="#f1f5f9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Margin="0,0,6,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Fill" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                                <Setter Property="Fill" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                                <Setter Property="Fill" Value="#94a3b8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock FontSize="10" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="OK"/>
                                                        <Setter Property="Foreground" Value="#059669"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Text" Value="ALERT"/>
                                                                <Setter Property="Foreground" Value="#dc2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                                <Setter Property="Text" Value="ROBOT"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                                <Setter Property="Text" Value="IDLE"/>
                                                                <Setter Property="Foreground" Value="#64748b"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Material Info -->
                                <Border Grid.Row="1" Margin="20,0,20,16" Background="#eff6ff" CornerRadius="8" Padding="12"
                                        BorderBrush="#dbeafe" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                                   Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding MaterialName}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MaterialName}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="Empty Cell"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                                <Setter Property="Foreground" Value="#94a3b8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="MaterialId" StringFormat="ID: {0}"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MaterialName}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="Ready for storage"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Environment Data -->
                                <StackPanel Grid.Row="2" Margin="20,0,20,16">
                                    <!-- Temperature -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE9CA;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="Temp" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding Temperature, StringFormat={}{0:F0}}"/>
                                                <Run Text="°C"/>
                                            </TextBlock>
                                            <TextBlock FontSize="10" Margin="6,0,0,0" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Optimal"/>
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                                <Setter Property="Text" Value="Critical"/>
                                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Border Height="6" CornerRadius="3" Background="#f1f5f9" Margin="0,0,0,16">
                                        <Border Height="6" CornerRadius="3" HorizontalAlignment="Left"
                                                Width="{Binding Temperature, Converter={x:Static local:PercentConverter.Instance}}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </Border>

                                    <!-- Humidity -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE798;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Text="Humidity" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center">
                                                <Run Text="{Binding Humidity, StringFormat={}{0:F0}}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                            <TextBlock FontSize="10" Foreground="{StaticResource SuccessBrush}" Margin="6,0,0,0" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Optimal"/>
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHumidityOptimal}" Value="False">
                                                                <Setter Property="Text" Value="Critical"/>
                                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Border Height="6" CornerRadius="3" Background="#f1f5f9">
                                        <Border Height="6" CornerRadius="3" Background="{StaticResource InfoBrush}" HorizontalAlignment="Left"
                                                Width="{Binding Humidity, Converter={x:Static local:HumidityPercentConverter.Instance}}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Footer -->
                                <Border Grid.Row="3" Background="#f8fafc" CornerRadius="0,0,12,12" Padding="16,12"
                                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource SuccessBrush}"/>
                                            <TextBlock Text="Live Update" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button HorizontalAlignment="Right"
                                                Padding="12,6" FontSize="12"
                                                Command="{Binding DataContext.OpenControlCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="&#xE7EF;"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                                    <Setter Property="Text" Value="&#xE72E;"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Margin="6,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Control"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                                    <Setter Property="Text" Value="Locked"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- List View -->
        <Border Grid.Row="2" Margin="32,0,32,32" Background="White" CornerRadius="12"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Visibility="{Binding IsListView, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="CellDataGrid" ItemsSource="{Binding Cells}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#f0f2f4"
                          BorderThickness="0"
                          Background="Transparent"
                          RowBackground="White"
                          CanUserAddRows="False">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#f9fafb"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Padding" Value="24,16"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="24,16"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Warning">
                                    <Setter Property="Background" Value="#fef2f2"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                    <Setter Property="Background" Value="#eff6ff"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f8fafc"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Cell ID -->
                        <DataGridTemplateColumn Header="CELL ID" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="10,6">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#f1f5f9"/>
                                                <Setter Property="BorderBrush" Value="#e5e7eb"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                        <Setter Property="Background" Value="#fef2f2"/>
                                                        <Setter Property="BorderBrush" Value="#fecaca"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                        <Setter Property="Background" Value="#dbeafe"/>
                                                        <Setter Property="BorderBrush" Value="#bfdbfe"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding CellCode}" FontWeight="Bold" FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                            <Setter Property="Foreground" Value="#dc2626"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                            <Setter Property="Foreground" Value="#2563eb"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="STATUS" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="10,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#ecfdf5"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                        <Setter Property="Background" Value="#dc2626"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                        <Setter Property="Background" Value="#2563eb"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                        <Setter Property="Background" Value="#f1f5f9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Margin="0,0,6,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Fill" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                                <Setter Property="Fill" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                                <Setter Property="Fill" Value="#94a3b8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock FontSize="10" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="OK"/>
                                                        <Setter Property="Foreground" Value="#059669"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Text" Value="ALERT"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RobotActive">
                                                                <Setter Property="Text" Value="ROBOTIC"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Empty">
                                                                <Setter Property="Text" Value="EMPTY"/>
                                                                <Setter Property="Foreground" Value="#64748b"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Material -->
                        <DataGridTemplateColumn Header="MATERIAL" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                                   Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                                        <StackPanel Margin="12,0,0,0">
                                            <TextBlock FontSize="13" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding MaterialName}"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MaterialName}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="No Material"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                                <Setter Property="Foreground" Value="#94a3b8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="MaterialId" StringFormat="ID: {0}"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MaterialName}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="Ready for storage"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Temperature -->
                        <DataGridTemplateColumn Header="TEMPERATURE" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="13" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding Temperature, StringFormat={}{0:F1}}"/>
                                                <Run Text="°C"/>
                                            </TextBlock>
                                            <TextBlock FontSize="10" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="OPTIMAL"/>
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                                <Setter Property="Text" Value="CRITICAL"/>
                                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <Border Height="4" CornerRadius="2" Background="#f1f5f9" Margin="0,6,24,0" Width="96" HorizontalAlignment="Left">
                                            <Border Height="4" CornerRadius="2" HorizontalAlignment="Left"
                                                    Width="{Binding Temperature, Converter={x:Static local:PercentConverterSmall.Instance}}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTemperatureOptimal}" Value="False">
                                                                <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Humidity -->
                        <DataGridTemplateColumn Header="HUMIDITY" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}">
                                                <Run Text="{Binding Humidity, StringFormat={}{0:F0}}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                            <TextBlock Text="OPTIMAL" FontSize="10" Margin="8,0,0,0" VerticalAlignment="Center"
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                        <Border Height="4" CornerRadius="2" Background="#f1f5f9" Margin="0,6,24,0" Width="96" HorizontalAlignment="Left">
                                            <Border Height="4" CornerRadius="2" Background="{StaticResource InfoBrush}" HorizontalAlignment="Left"
                                                    Width="{Binding Humidity, Converter={x:Static local:HumidityPercentConverterSmall.Instance}}"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="ACTIONS" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Padding="12,6"
                                            Command="{Binding DataContext.OpenControlCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="&#xE7EF;"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                                <Setter Property="Text" Value="&#xE72E;"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Margin="6,0,0,0" FontSize="12" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Control"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRobotActive}" Value="True">
                                                                <Setter Property="Text" Value="Locked"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                <Setter Property="Text" Value="Adjust"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Footer -->
                <Border Grid.Row="1" Background="#f9fafb" Padding="24,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <TextBlock Text="Showing 1 to 6 of 124 cells in Zone A &amp; B" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource SecondaryButton}" Content="Previous" Padding="12,6" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource SecondaryButton}" Content="Next" Padding="12,6"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
